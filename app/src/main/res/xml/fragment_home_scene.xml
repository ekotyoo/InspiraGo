<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="easeIn"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/cv_quote"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="500dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintVertical_bias="0.3"
            android:layout_marginEnd="20dp"
            android:alpha="0"
            android:layout_marginStart="20dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/tv_quote"
            motion:layout_constraintEnd_toEndOf="@+id/cv_quote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="@+id/cv_quote"
            motion:layout_constraintStart_toStartOf="@+id/cv_quote"
            motion:layout_constraintBottom_toBottomOf="@+id/cv_quote"
            motion:layout_constraintVertical_bias="0.26"
            android:translationZ="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/iv_quote_decoration"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:rotation="180"
            android:layout_marginStart="12dp"
            motion:layout_constraintStart_toStartOf="@+id/cv_quote"
            android:layout_marginBottom="-30dp"
            motion:layout_constraintBottom_toTopOf="@+id/tv_quote"
            android:alpha="0"
            android:translationZ="20dp" />
        <Constraint
            android:id="@+id/btn_fav"
            motion:layout_constraintEnd_toStartOf="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_share"
            android:layout_marginEnd="20dp"
            android:translationZ="20dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/btn_share"
            motion:layout_constraintEnd_toEndOf="@+id/cv_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/cv_quote"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:translationZ="20dp"
            android:alpha="0" />
        <Constraint
            android:id="@+id/floatingActionButton"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/cv_quote"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/btn_share"
            motion:layout_constraintEnd_toEndOf="@+id/cv_quote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/cv_quote"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            android:translationZ="20dp"
            android:alpha="1" />
        <Constraint
            android:id="@+id/btn_fav"
            motion:layout_constraintEnd_toStartOf="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_share"
            android:layout_marginEnd="20dp"
            android:translationZ="20dp"
            android:alpha="1" />
    </ConstraintSet>
</MotionScene>